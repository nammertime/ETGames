<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>

    <div class ="container">
    <label class="amount">
      <span>Subtotal: <%= @testTotal %></span>
    </br>
            <span>Taxes: <%= @testTax %></span>
            </br>
      <span>Total: <%= @testValue %></span>
      </br>
    </label>
  </article>
</div>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Game purchase"
          data-amount=<%= @testValue * 100 %>
          data-locale="auto"></script>
<% end %>
